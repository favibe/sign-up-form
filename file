}

/* --- 2. Image Container (Right) --- */
.img-container {
    flex: 1 1 40%; /* Takes 40% of the space */
    position: relative;
    background-color: var(--color-light-green); /* Fallback background */
    display: flex; /* Ensures content inside is also flex-controlled */
    flex-direction: column; /* Stack logo and credits vertically */
    justify-content: center; /* Center them */
    align-items: center; /* Center them */
}
.img-container > img {
    position: absolute; /* Allows img to be background-like */
    width: 100%;
    height: 100%;
    object-fit: cover; /* Fills container, cropping as needed */
    opacity: 0.7; /* Slightly desaturate/darken the image */
    z-index: 1; /* Ensures text is above image */
}
.logo-container {
    position: relative; /* Relative to img-container */
    background-color: rgba(0, 0, 0, 0.6); /* Darker overlay */
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 120px; /* Taller logo bar */
    gap: 1.5rem; /* More space between logo and text */
    z-index: 2; /* Above the image */
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}
.logo-container > img { /* Refers to the Odin logo image */
    height: 80px; /* Larger logo */
    width: auto;
    object-fit: contain; /* Ensure logo is not cropped */
    opacity: 1; /* Full opacity for the logo image */
    position: static; /* Remove absolute positioning */
}
.logo-text {
    font-family: 'Playfair Display', serif;
    font-size: 4rem; /* Larger logo text */
    color: var(--color-white);
    letter-spacing: 0.15em;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5); /* Text shadow for better visibility */
}
.img-credits {
    position: absolute;
    bottom: 1.5rem;
    width: 100%;
    font-size: 0.8rem;
    color: var(--color-white);
    text-align: center;
