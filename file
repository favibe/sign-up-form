    --color-text-gray: #374151;
    --color-label-gray: #6b7280;
    --color-form-bg: #fdfdfd; /* A slightly off-white for the form background */
}

/* --- Global Reset & Base Styles --- */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}
body {
    min-height: 100vh;
    background-color: var(--color-background);
    font-family: 'Inter', Arial, sans-serif; /* Changed to 'Inter' for a modern look */
    color: var(--color-text-gray);
    display: flex; /* Ensure body takes up full height and centers content if needed */
    justify-content: center;
    align-items: center;
}

/* --- Main Layout Container --- */
.container {
    display: flex;
    min-height: 100vh; /* Takes full viewport height on desktop */
    width: 100%;
    max-width: 1200px; /* Max width for the entire form-image block */
    background-color: var(--color-white);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15); /* More prominent shadow */
}

/* --- 1. Form Container (Left) --- */
.form-container {
    flex: 1 1 60%; /* Takes 60% of the space */
    display: flex;
    flex-direction: column;
    justify-content: center; /* Vertically centers the content within the form area */
    padding: 3rem 4rem; /* More generous padding */
    background-color: var(--color-form-bg);
}

.header-text {
    margin-bottom: 2.5rem; /* Increased spacing */
    color: var(--color-text-gray);
}
.header-text h1 {
    font-family: 'Playfair Display', serif;
    font-size: 2.2rem; /* Larger heading */
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--color-dark-green); /* Heading color */
}
.header-text p {
    font-size: 1rem;
    line-height: 1.5;
}

/* --- The Form Layout --- */
form {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Two equal columns for inputs */
    gap: 1.5rem 2.5rem; /* Row gap and Column gap */
    width: 100%;
    background-color: var(--color-white); /* White background for the form fields section */
    padding: 2rem; /* Padding around the input fields */
    border-radius: 8px; /* Slightly rounded corners */
    box-shadow: inset 0 2px 8px rgba(0,0,0,0.05); /* Subtle inner shadow */
}

.input-group {
    display: flex;
    flex-direction: column; /* Stacks label on top of input */
    align-items: flex-start; /* Aligns items to the left */
}
label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    color: var(--color-label-gray);
    margin-bottom: 0.4rem; /* Spacing between label and input */
}
input {
    padding: 0.9rem 1.1rem; /* More padding inside inputs */
    border: 1px solid var(--color-light-gray);
    border-radius: 6px;
    font-size: 1rem;
    width: 100%; /* Important: makes input take full width of its grid cell */
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    color: var(--color-text-gray);
}
input:focus {
    outline: none;
    border-color: var(--color-dark-green);
    box-shadow: 0 0 0 3px rgba(55, 89, 53, 0.25); /* Stronger focus shadow */
}
/* Validation Error Styling */
input.error {
    border-color: var(--color-red);
}
input.error:focus {
    box-shadow: 0 0 0 3px rgba(201, 81, 78, 0.35);
}
.error-message {
    color: var(--color-red);
    font-size: 0.8rem;
    min-height: 1rem; /* Prevents layout jump when message appears */
    margin-top: 0.4rem;
    padding-left: 0.2rem;
}

/* --- Full Width Items (Button & Login Link) --- */
.full-width {
    grid-column: 1 / -1; /* Makes element span both columns */
    text-align: center; /* Center content of full-width items */
}
.submit {
    margin-top: 1.5rem;
}
button {
    width: 100%;
    max-width: 350px; /* Slightly wider button */
    display: block;
    margin: 0 auto; /* Centers the button */
    padding: 1.1rem 1.5rem; /* More padding */
    background-color: var(--color-dark-green);
    color: var(--color-white);
    border: none;
    border-radius: 8px; /* More rounded button */
