}
.img-credits a {
    color: #a4eaff; /* Slightly brighter light blue for links */
    text-decoration: underline;
    font-weight: 500;
}
.img-credits a:hover {
    color: var(--color-white);
}

/* --- Responsive Adjustments --- */
@media (max-width: 992px) { /* Tablet and smaller desktops */
    .container {
        max-width: 90%;
        min-height: auto; /* Allow height to adjust */
        margin: 2rem auto; /* Add margin for spacing */
    }
    .form-container {
        padding: 2.5rem 3rem;
    }
    .header-text h1 {
        font-size: 1.8rem;
    }
    form {
        gap: 1.25rem 2rem;
        padding: 1.5rem;
    }
    input {
        padding: 0.8rem 1rem;
    }
    .img-container {
        flex: 1 1 35%; /* Adjust image container size */
    }
    .logo-container {
        height: 100px;
        top: 25%; /* Adjust position of logo bar */
    }
    .logo-container > img {
        height: 65px;
    }
    .logo-text {
        font-size: 3.5rem;
    }
}

@media (max-width: 768px) { /* Small tablets and mobile phones */
    body {
        align-items: flex-start; /* Align to top on mobile */
    }
    .container {
        flex-direction: column; /* Stack image on top of form */
        max-width: 100%;
        margin: 0;
        box-shadow: none; /* Remove shadow on full-width mobile */
    }
    .form-container {
        order: 2; /* Ensures form is below image in stacked layout */
        flex-basis: auto; /* Adjust height dynamically */
        padding: 2rem 1.5rem; /* Smaller padding for mobile */
    }
    .header-text {
        margin-bottom: 2rem;
    }
    .header-text h1 {
        font-size: 1.6rem;
        color: var(--color-text-gray); /* Change heading color to match text */
    }
    form {
        grid-template-columns: 1fr; /* Single column for inputs on mobile */
        gap: 1rem;
        padding: 1rem;
    }
    button {
        max-width: 100%; /* Button takes full width on mobile */
        font-size: 1rem;
        padding: 0.9rem 1.2rem;
    }
    .login-link {
        margin-top: 1rem;
        font-size: 0.9rem;
    }

    .img-container {
        order: 1; /* Ensures image is on top when stacked */
        flex-basis: 30vh; /* Fixed height for image on mobile */
        height: 30vh;
        min-height: 200px; /* Minimum height for the image */
        justify-content: center; /* Center logo container in new img-container */
        align-items: center;
    }
    .img-container > img {
        opacity: 0.8; /* Slightly less opaque on mobile */
    }
    .logo-container {
        position: static; /* Remove absolute positioning on mobile */
        height: 100px;
        top: auto;
        transform: none;
        box-shadow: none;
        background-color: rgba(0, 0, 0, 0.4);
    }
    .logo-container > img {
        height: 55px;
    }
    .logo-text {
        font-size: 2.8rem;
        letter-spacing: 0.1em;
    }
    .img-credits {
        display: none; /* Hide credits on very small screens */
    }
}

@media (max-width: 480px) { /* Extra small phones */
    .form-container {
        padding: 1.5rem 1rem;
    }
    .header-text h1 {
        font-size: 1.4rem;
    }
